
<div class="container">
<div class="row">
<div class="col-4">
<%= image_tag @account.image.thumb_profile.url, class: "profile-pic img-circle", size: "200px" %>
</div>
<div class="col-8">
<h1><%= @account.full_name %></h1>
<%= link_to "Edit Profile", edit_account_registration_path, class: "btn btn-secondary" %>
<div class="profile-stats"><%= @account.posts.size %> posts</div>
<div class="profile-stats"><%= @account.total_followers %> followers</div>
<div class="profile-stats"><%= @account.total_following %> following</div>

<p><%= @account.username %></p>
<p><%= simple_format @account.description if @account.description.present? %></p>
<p><%= link_to "#{@account.website}", @account.website if @account.website.present? %></p>
</div>
</div>

<div class="row profile-posts">
<% @posts.each do |post| %>
    <div class="col-4">
    <div class="insta-post">
<%= image_tag post.image.url, class: "img img-fluid" %>
</div>
</div>
<% end %>
</div>
</div>